<section class="section section-centered" id="booking">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <h2 class="section-header">Pricing</h2>

        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="thumbnail">
              <div class="caption">
                <h3 class="text-align-centered">1 Participant</h3>
                <h2 class="text-align-centered font-open-sans-bold">&pound;135</h2>
              </div>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6">
            <div class="thumbnail">
              <div class="caption">
                <h3 class="text-align-centered">2 Participants</h3>
                <h2 class="text-align-centered font-open-sans-bold">&pound;240</h2>
              </div>
            </div>
          </div>
        </div>

        <h2 class="section-header">Book your place</h2>

        <form class="form-aligned-left" action="//formspree.io/juxta_productions@hotmail.com" method="post">
          <h5 class="form-header font-open-sans-semi-bold">Participant details:</h5>

          <div class="form-group">
            <label class="sr-only" for="participant-name">Participant name:</label>
            <input type="text" class="form-control" id="participant-name" name="participant-name" placeholder="Participant name">
          </div>

          <div class="form-group">
            <label class="sr-only" for="participant-age">Participant age:</label>
            <input type="text" class="form-control" id="participant-age" name="participant-age" placeholder="Participant age">
          </div>

          <div class="form-group">
            <label class="sr-only" for="tshirtsize">T-shirt size request</label>
            <select class="form-control" name="tshirt-size">
              <option>Select T-shirt size</option>
              <option>12 &ndash; 13</option>
              <option>14 &ndash; 15</option>
              <option>Small</option>
              <option>Medium</option>
              <option>Large</option>
            </select>
          </div>

          <div class="form-group">
            <label class="sr-only" for="participantnums">Number of participants</label>
            <select class="form-control" name="Number-of-participants">
              <option>Select participant number</option>
              <option>1</option>
              <option>2</option>
            </select>
          </div>

          <div class="form-group">
            <label class="small" for="medical-information">Medical information:</label>
            <textarea class="form-control" rows="3" id="medical-information" name="medical-information"></textarea>
          </div>

          <h5 class="form-header font-open-sans-semi-bold">Parent/Guardian details:</h5>

          <div class="form-group">
            <label class="sr-only" for="guardian-name">Parent/Guardian name:</label>
            <input type="text" class="form-control" id="guardian-name" name="name" placeholder="Guardian name">
          </div>

          <div class="form-group">
            <label class="sr-only" for="guardian-email">Parent/Guardian email address:</label>
            <input type="email" class="form-control" id="guardian-email" name="email" placeholder="Guardian email address">
          </div>

          <h5 class="form-header font-open-sans-semi-bold">Next steps:</h5>

          <p class="small">
            Juxta Productions will be in touch via email to confirm your booking.<br>
            We'll also send through a copy of the Terms &amp; Conditions along with instructions on how to pay.
          </p>

          <br>

          <div class="form-group text-align-centered">
            <button type="submit" class="btn btn-default btn-outline-inverse btn-lg">Submit your details</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</section>

<section class="section section-centered section-double" id="testimonials">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">

        <h2 class="section-header">Testimonials</h2>

        <div class="carousel owl-carousel" data-hook="carousel">
